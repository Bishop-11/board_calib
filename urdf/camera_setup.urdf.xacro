    <!-- Towards Door -->
    <!-- <origin xyz="0.685 0.0 0.407" rpy="0.0 0.0 -1.57"/> -->
  </joint>

  <!-- Charuco Board Centre Link to Charuco Board Link -->
  <link name="charuco_board_link"/>
  <joint name="charuco_board_centre_to_charuco_board" type="fixed">
    <parent link="charuco_board_centre_link"/>
    <child link="charuco_board_link"/>
    <origin xyz="-0.065 -0.065 0.0" rpy="0.0 0.0 0.0"/> <!-- update these values to match your setup -->
  </joint>

