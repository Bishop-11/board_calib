  <!-- Attach to Global Map -->
  <link name="map"/>
  <link name="calibration_map"/>
  <joint name="map_to_calibration_map" type="fixed">
    <parent link="map"/>
    <child link="calibration_map"/>
    <origin xyz="0 0 0" rpy="0.0 0.0 0.0"/>
  </joint>

  <!-- CALIBRATION BOARD & RELATED LINKS-->
  <!-- Map to Table Link -->
  <link name="table_link"/>
  <joint name="calibration_map_to_table_link" type="fixed">
    <parent link="calibration_map"/>
    <child link="table_link"/>
    <origin xyz="0.755 0.500 0.397" rpy="0.0 0.0 0.0"/>
  </joint>

  <!-- Map to Charuco Board Centre Link -->
  <link name="charuco_board_centre_link"/>
  <joint name="map_to_charuco_board" type="fixed">
    <parent link="calibration_map"/>
    <child link="charuco_board_centre_link"/>
    <!-- update these values to match your setup -->
    <!-- Desk Setup -->
    <origin xyz="0.00 0.20 0.065" rpy="1.57 0.0 0.0"/>
    <!-- UR Setup -->
    <!-- Towards Arms -->
